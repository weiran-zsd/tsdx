{
  "name": "dts-cli",
  "version": "1.0.1",
  "author": "唯然<weiran.zsd@outlook.com>",
  "description": "Zero-config TypeScript package development",
  "license": "MIT",
  "homepage": "https://github.com/weiran-zsd/dts-cli",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weiran-zsd/dts-cli.git"
  },
  "keywords": [
    "react",
    "typescript",
    "bundle",
    "rollup"
  ],
  "bugs": {
    "url": "https://github.com/weiran-zsd/dts-cli/issues"
  },
  "bin": {
    "dts": "./dist/index.js"
  },
  "scripts": {
    "prepare": "tsc -p tsconfig.json",
    "build": "tsc -p tsconfig.json",
    "lint": "yarn build && yarn lint:post-build",
    "lint:post-build": "node dist/index.js lint ./ --ignore-pattern 'test/e2e/fixtures/lint'",
    "test": "yarn build && yarn test:post-build",
    "test:post-build": "node dist/index.js test",
    "start": "tsc -p tsconfig.json --watch",
    "release": "yarn test && release-it",
    "deduplicate": "yarn dedupe",
    "deduplicate:check": "yarn dedupe -c",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "files": [
    "dist",
    "templates",
    "conf"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.16.5",
    "@babel/helper-module-imports": "^7.16.0",
    "@babel/parser": "^7.16.6",
    "@babel/plugin-proposal-class-properties": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/traverse": "^7.16.5",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/jest": "^27.0.3",
    "ansi-escapes": "^4.3.2",
    "asyncro": "^3.0.0",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "babel-plugin-dev-expression": "^0.2.3",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-polyfill-regenerator": "^0.3.0",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "camelcase": "^6.2.1",
    "chalk": "^4.1.2",
    "enquirer": "^2.3.6",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "execa": "^4.1.0",
    "figlet": "^1.5.2",
    "fs-extra": "^10.0.0",
    "jest": "^27.4.0",
    "jest-watch-typeahead": "^0.6.5",
    "jpjs": "^1.2.1",
    "lodash.merge": "^4.6.2",
    "ora": "^5.4.1",
    "pascal-case": "^3.1.2",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "progress-estimator": "^0.3.0",
    "regenerator-runtime": "^0.13.9",
    "rollup": "^2.60.2",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "sade": "^1.7.4",
    "semver": "^7.3.5",
    "shelljs": "^0.8.4",
    "sort-package-json": "^1.53.1",
    "tiny-glob": "^0.2.9",
    "ts-jest": "^27.1.1",
    "tslib": "^2.3.1",
    "type-fest": "^2.8.0",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@release-it/conventional-changelog": "^3.3.0",
    "@types/eslint": "^8.2.1",
    "@types/figlet": "^1.5.4",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.178",
    "@types/node": "^14.18.0",
    "@types/react": "^16.14.21",
    "@types/rollup-plugin-json": "^3.0.3",
    "@types/sade": "^1.7.4",
    "@types/semver": "^7.3.9",
    "@types/shelljs": "^0.8.9",
    "@types/styled-components": "^5.1.18",
    "auto-changelog": "^2.3.0",
    "autoprefixer": "^10.4.0",
    "babel-plugin-replace-identifiers": "^0.1.1",
    "cssnano": "^5.0.13",
    "doctoc": "^2.1.0",
    "husky": "^7.0.4",
    "pinst": "^2.1.6",
    "pretty-quick": "^3.1.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-is": "^16.13.1",
    "release-it": "^14.11.8",
    "rollup-plugin-postcss": "^4.0.2",
    "styled-components": "^5.3.3",
    "tiny-invariant": "^1.2.0",
    "tiny-warning": "^1.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern '!test/tests/lint/**' && yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits",
        "infile": "CHANGELOG.md"
      }
    },
    "github": {
      "release": true
    },
    "npm": {
      "skipChecks": true
    }
  },
  "packageManager": "yarn@3.1.1"
}
